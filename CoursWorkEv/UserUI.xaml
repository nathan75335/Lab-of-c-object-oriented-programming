<Window x:Class="CoursWorkEv.UserUI"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CoursWorkEv"
        mc:Ignorable="d"
        Title="UserUI" Height="550" Width="900">
    <Grid>
        <Grid Width="200" HorizontalAlignment="Left" Background="#171717" 
              >
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" >
                <ListView x:Name="ListViewMenu"  Width="200" Background="#171717" BorderBrush="Transparent" BorderThickness="0" SelectionChanged="ListView_SelectionChanged">
                    <ListViewItem Content="Каталог Пиццы" Height="50" FontSize="20" Foreground="White" Padding="10"/>
                    <ListViewItem Content="Корзина" Height="50" FontSize="20" Foreground="White" Padding="10"/>
                    <ListViewItem Content="Студент" Height="50" FontSize="20" Foreground="White" Padding="10"/>
                </ListView>
            </StackPanel>
        </Grid>
        <Frame NavigationUIVisibility="Hidden" x:Name="MyFrame" Width="700" HorizontalAlignment="Right"/>
    </Grid>
</Window>
